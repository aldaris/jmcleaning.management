<div class="col-md-8 offset-md-2">
<h1><%= t ".heading" %></h1>
<div class="card ">
  <h5 class="card-header"><i class="fas fa-user-tie"></i> <%= t ".contact_details" %></h5>
  <div class="card-body">
    <%= form_with model: @client, local: true do |form| %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", autocomplete: "off" %>
        <small class="form-text text-muted">
          <%= t ".name_help" %>
        </small>
      </div>
      <div class="form-group col-md-6">
        <%= form.label :nick_name %>
        <%= form.text_field :nick_name, class: "form-control" %>
        <small class="form-text text-muted">
          <%= t ".nick_name_help" %>
        </small>
      </div>
    </div>
    <div class="form-group">
        <%= form.label :email_address %>
        <%= form.email_field :email_address, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :phone_number %>
      <%= form.text_field :phone_number, class: "form-control" %>
    </div>
  </div>
  <h5 class="card-header border-top">
    <i class="far fa-address-card"></i> <%= t ".addresses" %>
  </h5>
  <div class="card-body">
    <%= fields_for :billing_address, @client.billing_address do |form_address| %>
    <div class="form-group">
      <%= form_address.label :first_line %>
      <%= form_address.text_field :first_line, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form_address.label :second_line %>
      <%= form_address.text_field :second_line, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form_address.label :third_line %>
      <%= form_address.text_field :third_line, class: "form-control" %>
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <%= form_address.label :town %>
        <%= form_address.text_field :town, class: "form-control" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-3">
        <%= form_address.label :post_code %>
        <%= form_address.text_field :post_code, class: "form-control", maxlength: 10 %>
      </div>
    </div>
    <% end %>
    <%= form.submit class: "btn btn-primary btn-block"%>
  </div>


<% end %>
  </div>
</div>
</div>
